<div class="main-wrapper scrollspy-container">
  <div class="page-title static-header" style="background-image:url('https://res.cloudinary.com/triptable/image/upload/c_fill,q_auto,f_auto,g_auto/dpr_auto,w_auto/c_limit,w_1920/{{data.attraction.image.public_id}}.{{data.attraction.image.format}}');padding: 170px 0;background-position: center;">

				<div class="container">

					<div class="row">

						<div class="col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">

							<h1 class="hero-title">{{data.attraction.name}}</h1>

							<ol class="breadcrumb-list">
                <li><a href="/">Inicio</a></li>
                <li><a href="/attractions">Atracciones</a></li>
                <li><a href="/attractions/{{data.attraction.slug}}">{{data.attraction.name}}</a></li>
							</ol>

						</div>

					</div>

				</div>

			</div>
</div>
<section>

				<div class="container">

					<div class="row">

						<div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

							<div class="section-title">

								<h3>Tours hacia {{data.attraction.name}}</h3>

							</div>

						</div>

					</div>

					 <div class="GridLex-gap-30-wrappper package-grid-item-wrapper">

            <div class="GridLex-grid-noGutter-equalHeight">
             {{#each data.tours }}
              <div class="GridLex-col-3_sm-4_xs-12 mb-30">
                <div class="package-grid-item">
                  <a href="/tour/{{slug}}">
                    <div class="image">
                      <img src="https://res.cloudinary.com/triptable/image/upload/c_fill,h_400,w_600,q_auto/v{{images.0.version}}/{{images.0.public_id}}.{{images.0.format}}" alt="{{name}}" />
                      {{#if featured}}
                      <div class="absolute-in-image">
                        <div class="duration"><span>Destacado</span></div>
                      </div>
                      {{/if}}
                    </div>
                    <div class="content clearfix">
                      <h5>{{name}}</h5>
                      <div class="rating-wrapper">
                        <div class="raty-wrapper">
                          <div class="star-rating-read-only" data-rating-score="3.5"></div> <span> /
                          {{#if nOfReviews}}
                            {{nOfReviews.length}}
                           {{else}}
                           0
                           {{/if}}
                          reviews</span>
                        </div>
                      </div>
                      <div class="absolute-in-content">
                        <span class="btn"><i class="fa fa-heart-o"></i></span>
                        <div class="price">${{price}}</div>
                      </div>
                    </div>
                  </a>
                </div>
              </div>
              {{/each}}

            </div>
            </div>

				</div>

			</section>
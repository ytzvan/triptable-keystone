                          {{#if data.tour.description.extended}}
                            <article class="description-language">{{{data.tour.description.extended}}}</article>
                          {{else}}
                            <article class="description-language">{{i18n "description_spanish_not_available"}}.</article>
                          {{/if}}
                        </div>
                        <div role="tabpanel" class="tab-pane" id="description_en">
                          {{#if data.tour.description_eng.extended}}
                            <article class="description-language">{{{data.tour.description_eng.extended}}}</article>
                          {{else}}
                            <article class="description-language">{{i18n "description_english_not_available"}}.</article>
                          {{/if}}
                        </div>
                      </div>

                    </div>

                    <script>
                    $(function() {
                    fbq('track', 'ViewContent');
                      $('#myTabs a').click(function (e) {
                        e.preventDefault()
                        $(this).tab('show')
                      });
                      {{#if data.tour.description.extended}}
                      $('#description_es').addClass('active');
                      $('#list-description_es').addClass('active');
                      {{else}}
                      $('#description_en').addClass('active');
                      $('#list-description_en').addClass('active');

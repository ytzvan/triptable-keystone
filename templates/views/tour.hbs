                      <h4>{{i18n "information"}}</h4>
                    </div>

                    <div>

                      <!-- Nav tabs -->
                      <ul id="#myTabs" class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="" id="list-description_es"><a href="#description_es" class="tour-description" aria-controls="home" role="tab" data-toggle="tab">{{i18n "description"}} <span class="flag-icon flag-icon-es"></span></a></li>

		{{#if data.validationErrors.password}}
		<div class="alert center alert-danger">
  			<strong>Error:</strong> {{i18n 'password_not_match_message'}}
		</div>
		{{/if}}

		{{#if data.validationErrors.isEmpty}}
		<div class="alert alert-danger">
  			<strong>Error:</strong> {{i18n 'password_not_empty_message'}}
		</div>
		{{/if}}


		{{#if data.validationErrors.csrfError}}

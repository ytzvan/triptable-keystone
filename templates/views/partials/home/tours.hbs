<section class="bg-light">

        <div class="container">

          <div class="row">

            <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

              <div class="section-title">

                <h3>Tours para Reservar</h3>
                <p>Estas actividades no pueden faltar en tu pr√≥xima visita</p>

              </div>

            </div>

          </div>

          <div class="GridLex-gap-30-wrappper package-grid-item-wrapper">

            <div class="GridLex-grid-noGutter-equalHeight">
             {{#each_upto data.tours.results 4}}
              <div class="GridLex-col-3_sm-6_xs-12 mb-30">
                <div class="package-grid-item">
                  <a href="/tour/{{slug}}">
                    <div class="image">
                      <img src="https://res.cloudinary.com/triptable/image/upload/c_fill,h_400,w_600/v{{images.0.version}}/{{images.0.public_id}}.{{images.0.format}}" alt="{{name}}" />
                      {{#if featured}}
                      <div class="absolute-in-image">
                        <div class="duration"><span>Destacado</span></div>
                      </div>
                      {{/if}}
                    </div>
                    <div class="content clearfix">
                      <h5>{{name}}</h5>
                      <div class="rating-wrapper">
                        <div class="raty-wrapper">
                          <div class="star-rating-read-only" data-rating-score="3.5"></div> <span> /
                          {{#if nOfReviews}}
                            {{nOfReviews.length}}
                           {{else}}
                           0
                           {{/if}}
                          reviews</span>
                        </div>
                      </div>
                      <div class="absolute-in-content">
                        <span class="btn"><i class="fa fa-heart-o"></i></span>
                        <div class="price">${{price}}</div>
                      </div>
                    </div>
                  </a>
                </div>
              </div>
              {{/each_upto}}

            </div>

          </div>

        </div>

      </section>

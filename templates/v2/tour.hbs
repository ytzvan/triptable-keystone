			<div id="listing-location" class="listing-section">
				<h3 class="listing-desc-headline margin-top-30 margin-bottom-30">{{i18n "location"}} </h3>

				<div id="singleListingMap-container">
					{{#if data.tour.latitude}}
					<div id="singleListingMap" data-latitude="{{data.tour.latitude}}" data-longitude="{{data.tour.longitude}}" data-map-icon="im im-icon-Geo2"></div>
					{{else}}
					<div id="singleListingMap" data-latitude="{{data.tour.city.latitude}}" data-longitude="{{data.tour.city.longitude}}" data-map-icon="im im-icon-Geo2"></div>

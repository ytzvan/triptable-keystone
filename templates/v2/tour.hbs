				{{#if data.tour.multiPrice}}<span>{{i18n "from"}}:</span>{{/if}}
				<h4 class="headline">{{getPriceInCurrency data.tour.price data.tour.currency}} {{data.tour.currency}} {{i18n "per_person"}}</h4>
				</div>

				<div class="buttons"><a href="#listing-pricing-list" class="button primary"> <i class="sl sl-icon-fire"></i> {{i18n "book_now"}} </a>	
				<a href="mailto:hello@triptable.com?subject=Pregunta del tour: {{data.tour.name}} - Precio: {{getCurrency}} {{data.tour.price}} - Url: https://www.triptable.com/tour/{{data.tour.slug}}" class="button medium border"><i class="sl sl-icon-envelope-open"></i> {{i18n "send_message"}}</a></div>
  
		
				<div class="sharing-buttons no-border">
				
					<span>{{i18n "share"}}: </span>
					<!-- Share Buttons -->
					<ul class="share-buttons">
						<li><a class="fb-share" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{meta.url}}"><i class="fa fa-facebook"></i></a></li>
						<li><a class="twitter-share" target="_blank" href="https://twitter.com/intent/tweet?url={{meta.url}}&text={{#if_eq lang "en"}} {{data.tour.name_eng}} {{else}} {{data.tour.name}} {{/if_eq}}&via=triptable_es
"><i class="fa fa-twitter"></i></a></li>
						<li><a class="gplus-share" target="_blank" href="https://plus.google.com/share?url={{meta.url}}&text={{#if_eq lang "en"}} {{data.tour.name_eng}} {{else}} {{data.tour.name}} {{/if_eq}}&hl={{lang}}"><i class="fa fa-google-plus"></i></a></li>
						<li><a class="linkedin-share" target="_blank" href="https://www.linkedin.com/shareArticle?mini=true&url={{meta.url}}&title={{#if_eq lang "en"}} {{data.tour.name_eng}} {{else}} {{data.tour.name}} {{/if_eq}}&summary={{#if_eq lang "en"}} {{data.tour.description_eng.short}} {{else}} {{data.tour.description.short}} {{/if_eq}}"><i class="fa fa-linkedin"></i></a></li>
						<li>
							<a class="wa-share" href="https://api.whatsapp.com/send?text={{#if_eq lang "en"}}{{data.tour.name_eng}}{{else}} {{data.tour.name}} {{/if_eq}} - {{meta.url}}"> 	<i class="fa fa-whatsapp"></i></a>
						</li>
						<!-- <li><a class="pinterest-share" href="#"><i class="fa fa-pinterest-p"></i> Pin</a></li> -->
					</ul>
					<div class="clearfix"></div>
			</div>
						
			</section>
		</div>
		<!-- Contact Form / End -->

	</div>

</div>



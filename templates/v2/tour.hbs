<!-- Slider Partial %- partial("partials/single/_slider") %> -->
{{>single/_slider}}
<div class="container">
	<div class="row sticky-wrapper">
		<div class="col-lg-8 col-md-8 padding-right-30">

			<!-- Titlebar -->
			<div id="titlebar" class="listing-titlebar">
				<div class="listing-titlebar-title">
					<h2>{{getTourLocName data.tour.name data.tour.name_eng}}</h2>
					<span>
						<a href="#listing-location" class="listing-address">
							<i class="fa fa-map-marker"></i>
							<a target="_blank" href="/destino/{{data.tour.city.slug}}">{{i18n "tours_in"}} {{data.tour.city.city}}, {{data.tour.country.country}} </h2></a>
						</a>
					</span>
					<!--<div class="star-rating" data-rating="5">
						<div class="rating-counter"><a href="#listing-reviews">(31 reviews)</a></div>
					</div>-->
					
				</div>
			</div>



			<!-- Listing Nav -->
			<div id="listing-nav" class="listing-nav-container">
				<ul class="listing-nav" id="tour-section-nav">
					<li><a href="#listing-overview" class="active">{{i18n "tour_description_title"}}</a></li>
					<!--<li><a href="#listing-pricing-list">{{i18n "pricing"}}</a></li> -->
					<li><a href="#listing-location">{{i18n "location"}}</a></li>
					<li><a href="#listing-reviews">{{i18n "reviews"}}</a></li>
					<!--<li><a href="#add-review">Add Review</a></li>-->
				</ul>
			</div>
			
			<!-- Overview -->
			<div class="row margin-top-30 margin-bottom-10">
					<div class="col-md-4 text-center">
					<i class="im im-icon-Hand-TouchSmartphone" style="font-size: 35px;text-align: center;"></i>
					<p style="font-size: 14px;line-height: 22px;">{{i18n "mobile_voucher_av"}}</p>
				</div>
				<div class="col-md-4 text-center">
					<i class="im im-icon-Ticket" style="font-size: 35px;text-align: center;"></i>
					<p style="font-size: 14px;line-height: 22px;">{{i18n "entrance_tickets"}}</p>
				</div>
			</div>
			<div id="listing-overview" class="listing-section">
				<h3 class="margin-bottom-15 margin-top-5">{{i18n "tour_description_title"}}</h3>
			
				<!-- Amenities -->
				<ul class="listing-features checkboxes margin-top-5 margin-bottom-30">
					 {{#if data.tour.hotelPickup}}
					 <li>{{i18n "hotel_pickup"}}</li>
					 {{/if}}
					 {{#if data.tour.transportation}}
					 <li>{{i18n "ground_transportation"}}</li>
					 {{/if}}
					 {{#if data.tour.food}}
					 <li>{{i18n "food"}}</li>
					 {{/if}}
					 {{#if data.tour.drinks}}
					 <li>{{i18n "drinks"}}</li>
					 {{/if}}
					 {{#if data.tour.insurance}}
					 <li>{{i18n "insurance"}}</li>
					 {{/if}}
					 {{#if data.tour.taxes}}
					 <li>{{i18n "taxes"}}</li>
					 {{/if}}
					 {{#if data.tour.tickets}}
					 <li>{{i18n "tickets"}}</li>
					 {{/if}}
					 {{#if data.tour.maritimeTransportation}}
					 <li>{{i18n "maritime_transportation"}}</li>
					 {{/if}}
					 {{#if data.tour.snacks}}
					 <li>{{i18n "snacks"}}</li>
					 {{/if}}
					 {{#if data.tour.tourGuide}}
					 <li>{{i18n "tour_guide"}}</li>
					 {{/if}}
					 {{#if data.tour.privateCabin}}
					 <li>{{i18n "private_lodging"}}</li>
					 {{/if}}
					 {{#if data.tour.sharedCabin}}
					 <li>{{i18n "shared_lodging"}}</li>
					 {{/if}}
				</ul>
				<!-- Description -->
				{{#if_eq lang "en" }}
					{{#if data.tour.description_eng}}
				<div class="show-more">
						{{{data.tour.description_eng.extended}}}
						</div>
							<a href="#" class="show-more-button" data-more-title="{{i18n "show_more"}}" data-less-title="{{i18n "show_less"}}"><i class="fa fa-angle-down"></i></a>
					{{else}}	
					<div class="show-more">
						{{{data.tour.description.extended}}}
						
						</div>
						<a href="#" class="show-more-button" data-more-title="{{i18n "show_more"}}" data-less-title="{{i18n "show_less"}}"><i class="fa fa-angle-down"></i></a>
					{{/if}}	
				{{else}}
				<div class="show-more">
					{{{data.tour.description.extended}}}
					
					</div>
						<a href="#" class="show-more-button" data-more-title="{{i18n "show_more"}}" data-less-title="{{i18n "show_less"}}"><i class="fa fa-angle-down"></i></a>
				{{/if_eq}}
			</div>




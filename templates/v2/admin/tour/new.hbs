		<div class="row">
			<div class="col-lg-12">
        <form method="POST" action="/admin/tour/add">
				<div id="add-listing">

					<!-- Section -->
					<div class="add-listing-section">

						<!-- Headline -->
						<div class="add-listing-headline">
							<h3><i class="sl sl-icon-doc"></i> Basic Informations</h3>
						</div>

						<!-- Title -->
       
						<div class="row with-forms">
							<div class="col-md-12">
								<h5>Tour Title <i class="tip" data-tip-content="Name of your tour"></i></h5>
								<input class="search-field" name="name" type="text" value=""/>
							</div>
						</div>
            <div class="row">
							<div class="col-md-12">
                <div class="form">
                  <h5>Description <i class="tip" data-tip-content="DescripciÃ³n detallada del tour"></i></h5>
                  <textarea class="WYSIWYG" name="description_extended" cols="40" rows="3" id="summary" spellcheck="true"></textarea>
                </div>
						  </div>
						</div>

						<!-- Row -->
						<div class="row with-forms">

							<!-- Status -->
							<div class="col-md-6">
								<h5>Min Person</h5>
								<select name="minPerson">
                  {{#each data.minPerson}}
									<option>{{this}}</option>
									{{/each}}
								</select>
							</div>

							<!-- Type -->
							<div class="col-md-6">
								<h5>Max Person <i class="tip" data-tip-content="Maximum of 15 keywords related with your business"></i></h5>
								<select name="maxPerson">
								  {{#each data.minPerson}}
									<option>{{this}}</option>
									{{/each}}
								</select>
							</div>

						</div>
						<!-- Row / End -->

            <!-- Row -->
						<div class="row with-forms">

							<!-- Status -->
							<div class="col-md-6">
								<h5>Tour Duration</h5>
                  <input name="duration" type="number">
							</div>

							<!-- Type -->
							<div class="col-md-6">
								
							</div>

						</div>
						<!-- Row / End -->

					</div>
					<!-- Section / End -->

					


					


					<button type="submit" class="button preview">Preview <i class="fa fa-arrow-circle-right"></i></button>

				</div>
        </form> 

			</div>

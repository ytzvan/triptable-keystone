<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12">
					<h2>Mis Tours</h2>
					<!-- Breadcrumbs -->
					<nav id="breadcrumbs">
						<ul>
							<li><a href="#">Home</a></li>
							<li><a href="#">Dashboard</a></li>
							<li>Mis Tours</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		<div class="row">
			
			<!-- Listings -->
      {{#if data.results_active}}
			<div class="col-lg-12 col-md-12">
				<div class="dashboard-list-box margin-top-0">
          
					<h4>Tours Activos: {{data.results_active.length}}</h4>
					<ul>
            
            {{#each data.results_active}}
						<li>
							<div class="list-box-listing">
								<div class="list-box-listing-img">
                  <a href="/keystone/tours/{{tourId}}">
                    {{#if heroImage.secure_url}}
                    <img src="https://res.cloudinary.com/triptable/image/upload/q_auto,w_250,h_150,c_fill,g_auto/v{{heroImage.version}}/{{heroImage.public_id}}.{{heroImage.format}}" alt=""></a>
                    {{else}}
                    <img src="images/listing-item-01.jpg" alt=""></a>
                    {{/if}}
                  </div>
								<div class="list-box-listing-content">
									<div class="inner">
										<h3><a href="/keystone/tours/{{tourId}}">{{name}}</a></h3>
										<span>{{description.extended}}</span>
										<div class="star-rating" data-rating="3.5">
											<div class="rating-counter">(12 purchases)</div>
										</div>
									</div>
								</div>
							</div>
							<div class="buttons-to-right">
								<a href="#" class="button gray"><i class="sl sl-icon-note"></i> Edit</a>
								<a href="#" class="button gray"><i class="sl sl-icon-close"></i> Delete</a>
							</div>
						</li>
            {{/each}}
           
					</ul>
          {{else}}
          <div class="col-lg-12 col-md-12 padding-top-30">
				  <div class="dashboard-list-box margin-top-0">
          <h4>No existen tours activos</h4>
          {{/if}}
          </div>
          </div>
          {{#if data.results_draft}}
          <div class="col-lg-12 col-md-12 padding-top-30">
				  <div class="dashboard-list-box margin-top-0">
					<h4>Tours Pendientes de Aprobaci√≥n: {{data.results_draft.length}}</h4>
					<ul>
            {{#each data.results_draft}}
						<li>
							<div class="list-box-listing">
								<div class="list-box-listing-img">
                  <a href="/keystone/tours/{{tourId}}">
                    {{#if heroImage.secure_url}}
                    <img src="https://res.cloudinary.com/triptable/image/upload/q_auto,w_250,h_150,c_fill,g_auto/v{{heroImage.version}}/{{heroImage.public_id}}.{{heroImage.format}}" alt=""></a>
                    {{else}}
                    <img src="images/listing-item-01.jpg" alt=""></a>
                    {{/if}}
                  </div>
								<div class="list-box-listing-content">
									<div class="inner">
										<h3><a href="/keystone/tours/{{tourId}}">{{name}}</a></h3>
										<span>{{description.extended}}</span>
										<div class="star-rating" data-rating="3.5">
											<div class="rating-counter">(12 purchases)</div>
										</div>
									</div>
								</div>
							</div>
							<div class="buttons-to-right">
								<a href="#" class="button gray"><i class="sl sl-icon-note"></i> Edit</a>
								<a href="#" class="button gray"><i class="sl sl-icon-close"></i> Delete</a>
							</div>
						</li>
            {{/each}}
           
					</ul>
          {{else}}
          <div class="col-lg-12 col-md-12 padding-top-30">
				  <div class="dashboard-list-box margin-top-0">
          <h4>Tours Inactivos: No existen tours inactivos</h4>
          {{/if}}
				</div>
			</div>

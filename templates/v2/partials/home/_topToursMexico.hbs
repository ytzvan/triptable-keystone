<!-- Fullwidth Section -->
<section class="fullwidth margin-top-15 padding-top-15 padding-bottom-15">

	<div class="container-fluid">
		<div class="row">

			<div class="col-xs-9">
				<h2 class="headline margin-bottom-15">
					{{i18n "most_popular_tours_in"}} {{i18n "mexico"}}
				<!--	<span>{{i18n "most_reserved_tours_message"}}</span> -->
				</h2>
			</div>
			<div class="col-xs-3 text-right">
				<span class="view-more margin-bottom-15">
					<a href="/mexico" target="_blank">{{i18n "view_all"}} <i class="sl sl-icon-arrow-right"></i></a>
				<!--	<span>{{i18n "most_reserved_tours_message"}}</span> -->
				</span>
			</div>
		</div>
	</div>
	<!-- Carousel / Start -->
	<div class="simple-fw-slick-carousel dots-nav">
		
		{{#each toursMexico.results }}
		<div class="mexico-tour-item" id="mexico-tour-item-{{@index}}">
			<div class="fw-carousel-item"> 
				<a target="_blank" href="/tour/{{slug}}" class="listing-item-container" tabindex="0"> 
				<div class="listing-item">
					{{#if heroImage.secure_url}} <!-- fall back -->
					<img async src="https://res.cloudinary.com/triptable/image/upload/c_fill,f_auto,q_85,h_480,w_390/v{{heroImage.version}}/{{heroImage.public_id}}.{{heroImage.format}}" alt="">
					{{else}}
					<img async src="https://res.cloudinary.com/triptable/image/upload/c_fill,h_400,w_600,q_auto/v{{images.0.version}}/{{images.0.public_id}}.{{images.0.format}}" alt="{{name}}" />
					{{/if}}
					<div class="listing-item-details">
						<ul>
							<!--<li></li>-->
						</ul>
					</div>
				<!--	<div class="listing-badge now-open"><strong>-15% OFF</strong></div>-->
					<div class="listing-item-content">
						<!--<span><i class="fa fa-map-marker"></i> {{city.city}}</span>-->
						<!--<h3>{{getTourLocName name name_eng}} </h3>-->
					</div>
				</div>
				<div class="tour-item-desc">
					<p class=""><i class="fa fa-map-marker"></i> {{city.city}} ‚óè <i class="fa fa-clock-o"></i> {{duration}}{{#if isMultiDay}}{{i18n "d"}} {{else}}{{i18n "h"}} {{/if}}</p>
					<span class="tour-item-desc">{{getTourLocName name name_eng}} </span>
					<span class="currency"><strong>{{../toursMexico.currency}} {{getPriceInCurrency price ../toursMexico.currency}}</strong> {{i18n "per_person"}}</span> 
				</div>
				</a>
			</div>
		</div>
		{{/each}}

	</div>
	<!-- Carousel / End -->

</section>
<!-- Fullwidth Section / End -->

<script>

// Measures product impressions and also tracks a standard
// pageview for the tag configuration.
// Product impressions are sent by pushing an impressions object
// containing one or more impressionFieldObject
$(document).ready(function() {
	var mexicoHomeTours = [];
	var pos = 0;
	var listName = "Home - Colombia Tours Featured";
	{{#each toursMexico.results }}
		setImpressions(mexicoHomeTours,"{{name}}","{{tourId}}",{{price}},"{{city.city}}","",listName,pos); 
		$( "#mexico-tour-item-"+pos).data( "tourObj", mexicoHomeTours[pos]); // Seed id with obj data
		pos = pos + 1;
	{{/each}}

	dataLayer.push({
		'event': 'productImpressions',
	  	'ecommerce': {
	    	'currencyCode': "USD",                       // Local currency is optional.
	    	'impressions': mexicoHomeTours
	  	}
	});

 	//On click event
	$('.mexico-tour-item').click(function(e){
		var target = e.currentTarget.id;
		var productObj = $('#'+target).data().tourObj;
		setProductClick(productObj, listName);
	});

});
</script>
<div class="container margin_30 white-bg">

  <div class="main_title">
    <h2>{{i18n "experiences"}}<span> Top</span></h2>
  </div>

  <div class="row">

    {{#each toursPanama}}
    <div class="col-lg-3 col-xl-3 col-md-3 col-6">
      <a href="/tour/{{slug}}">
        <div class="tour_container">
          <div class="ribbon_3 popular">
            <span>{{i18n 'featured'}}</span>
          </div>
          <div class="img_container">
            <a href="/tour/{{slug}}">
              <img async
                data-src="https://res.cloudinary.com/triptable/image/upload/c_fill,f_auto,q_auto,h_400/v{{heroImage.version}}/{{heroImage.public_id}}.{{heroImage.format}}"
                class="img-fluid lazyload" alt="{{name}}">
              <div class="short_info">
                <span class="price"><sup>{{currency}}</sup>{{getPriceInCurrency price ../toursPanama.currency}}
                  {{../toursPanama.currency}}</span>
              </div>
            </a>
          </div>
          <div class="tour_title">
            <h3>{{name}}</h3>
            <p>{{city.city}}</p>
            <div class="rating">
             <!-- <i class="icon-smile voted"></i><i class="icon-smile voted"></i><i class="icon-smile voted"></i><i
                class="icon-smile voted"></i><i class="icon-smile"></i><small>(75)</small> -->
            </div>
            <!-- end rating -->

            <!-- End wish list-->
          </div>
        </div>
        <!-- End box tour -->
      </a>
    </div><!-- End col -->
    {{/each}}

  </div><!-- End row -->

</div><!-- End container -->
<div class="container margin_30">

  <div class="main_title">
    <h2>{{i18n "destinations"}}<span> Top</span></h2>
  </div>

  <div class="row">

    {{#each data.cities}}
    <div class="col-lg-3 col-xl-3 col-md-4 col-6">
      <a href="#">
        <div class="tour_container">
          <!--<div class="ribbon_3"><span>Popular</span></div>-->
          <div style="height: 150px;" class="img_container">
            <a href="/destino/{{slug}}">
              <img style="height: 150px;"
                data-src="https://res.cloudinary.com/triptable/image/upload/c_fill,h_500,w_auto,g_center,q_90/{{image.public_id}}.{{image.format}}"
                width="800" height="533" class="img-fluid lazyload" alt="{{city}}">
              <!-- <div class="badge_save">Save<strong>30%</strong></div> -->
            </a>
          </div>
          <a href="/destino/{{slug}}">
            <div class="tour_title">
              <h2>{{city}}</h2>
            </div>
          </a>
        </div><!-- End box tour -->
      </a>
    </div><!-- End col -->
    {{/each}}

  </div><!-- End row -->


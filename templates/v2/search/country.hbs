<section>
<div id="titlebar" class="gradient">
	<div class="container">
		<div class="row">
			<div class="col-md-12 padding-top-30">
				{{#if data.country}}<h2 class="search-title">{{i18n "search_title"}} {{#if data.city}} {{data.placeName}}, {{/if}} {{data.country}}</h2>{{/if}}<span>{{i18n "available"}} <strong>{{data.tours.total}}</strong> {{i18n "tours_and_activities"}}.</span><p> {{i18n "showing_from"}} <strong>{{data.tours.first}}</strong> {{i18n "to"}} <strong>{{data.tours.last}}</strong></p>
				<!-- Breadcrumbs -->
				<nav id="breadcrumbs">
					<ul>
						<li><a href="#">{{i18n "home"}}</a></li>
						<li>{{i18n "search"}}</li>
					</ul>
				</nav>

			</div>
		</div>
	</div>
</div>

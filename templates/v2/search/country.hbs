<!-- Titlebar
================================================== -->
<section>
<div id="titlebar" class="gradient">
	<div class="container">
		<div class="row">
			<div class="col-md-12 padding-top-30">
				<h2 class="search-title">{{i18n "search_title"}} {{#if data.city}} {{data.placeName}}, {{/if}} {{data.country}}</h2><span>{{i18n "available"}} <strong>{{data.tours.total}}</strong> {{i18n "tours_and_activities"}}.</span><p> {{i18n "showing_from"}} <strong>{{data.tours.first}}</strong> {{i18n "to"}} <strong>{{data.tours.last}}</strong></p>
				<!-- Breadcrumbs -->
				<nav id="breadcrumbs">
					<ul>
						<li><a href="#">{{i18n "home"}}</a></li>
						<li>{{i18n "search"}}</li>
					</ul>
				</nav>

			</div>
		</div>
	</div>
</div>

<!-- Content
================================================== -->
<div class="container">
	<div class="row">
		<!-- Search -->
		<div class="col-md-12">
			<div class="main-search-input margin-top-0 margin-bottom-10">

				<!--<div class="main-search-input-item">
					<input type="text" placeholder="What are you looking for?" value=""/>
				</div> -->

				<div class="main-search-input-item">
					<select data-placeholder="Todos los Paises" id="countries-select" class="chosen-select" >
						<option value="panama">{{i18n "panama"}}</option>
						<option value="mexico">{{i18n "mexico"}}</option>
						<option value="colombia">Colombia</option>
					</select>
				</div>

				<div class="main-search-input-item">
					<select data-placeholder="{{i18n "filter_results"}}"  id="cities-select"  class="chosen-select" >
						<option value="{{data.country.country}}">{{i18n "filter_results"}}</option>	
						{{#each data.cities}}
						<option value="{{slug}}">{{city}}</option>	
						{{/each}}
					</select>
				</div>

				<button class="button">{{i18n "search"}}</button>
			</div>
		</div>
		<!-- Search Section / End -->
		<!--
		<div class="col-md-12">

			<!-- Sorting - Filtering Section -->
			<div class="row margin-bottom-25 margin-top-30">

				

			</div> 
			<!-- Sorting - Filtering Section / End -->


			<!-- Results-->
			<div class="row tour-search-list">
			{{#each data.tours.results}}
      	{{>search/_results}}
			{{/each}}	
			</div>
			<!-- Pagination -->
			<div class="clearfix"></div>
			<div class="row">
				<div class="col-md-12">
					<!-- Pagination -->
					<div class="pagination-container margin-top-20 margin-bottom-40">
						<nav class="pagination">
							<ul>
								{{#if data.tours.previous}}
								<li><a href="?page={{data.tours.previous}}"><i class="sl sl-icon-arrow-left"></i></a></li>
								{{/if}}
								{{{paginationNavigation data.tours.pages data.tours.currentPage data.tours.totalPages}}}

								
							 {{#if data.tours.next}}
								<li><a href="?page={{data.tours.next}}"><i class="sl sl-icon-arrow-right"></i></a></li>
								{{/if}}
							</ul>
						</nav>
					</div>
				</div>
			</div>
			<!-- Pagination / End -->

		</div>

	</div>
</div>
</section>
<script type="text/javascript">
  $(document).ready(function(){
		$('#countries-select').val("{{data.country}}"); //value of your default option
			$('#cities-select').val("{{data.city}}"); //value of your default option
	});
	document.addEventListener("DOMContentLoaded", function() {
		

	$("#countries-select").change(function() {
		var country = $( this ).val();
  		window.location.href="/"+country;
	});
	$("#cities-select").change(function() {
		var city = $( this ).val();
		if(city) { 
  		window.location.href="/destino/"+city;
			} else {
				window.location.href="/{{data.country}}";
			}
	});
});
</script>


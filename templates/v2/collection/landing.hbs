
<style>
  .main-search-inner h1.title {
    font-size: 2.7em;
    font-weight: 500;
    color: #ecf0f1
  }

  h2.subtitle {
    font-size: 1.9em;
    font-weight: 400;
    color: #ecf0f1
  }

  @media(max-width:767px) {
    .blog-compact-item {
      height: 200px;
    }

    .blog-compact-item-content {
      position: absolute;
      bottom: 10px;
      left: 0;
      padding: 0 5px;
      width: 100%;
      z-index: 50;
      box-sizing: border-box;
    }

    span.blog-item-tag {
      display: none;
    }

    .blog-compact-item-content h3 {
      padding: 5px 5px;
      line-height: 20px;
    }

    .listing-slider,
    .listing-slider .item {
      height: 40vh;
      min-height: 40vh;
    }

    .main-search-inner h1.title {
      font-size: 2em;
      font-weight: 500;
      color: #ecf0f1
    }

    h2.subtitle {
      font-size: 1.2em;
      font-weight: 400;
      color: #ecf0f1
    }

  }

  .home-feature-tours-slider {
    background-color: #f8f8f8;
  }

  .tour-info {
    min-height: 145px;
  }

  .tour-info h3.title {
    margin-top: 0px;
  }
   .tour-info {
    min-height: 145px;
  }

  .giveMeEllipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 23px;
    max-height: 46px;
  }
</style>
<!-- Fullwidth Section -->
<div class="container">
  <div class="row">
    <div class="col-md-12 margin-top-25">
      <h1>{{{getTourLocName data.landing.title.es data.landing.title.en}}}</h1>
    </div>
  </div>
</div>

<section class="fullwidth margin-top-20 padding-bottom-20">
<div class="container"> 
  <div class="row">
{{#each data.collections}}
<div class="col-md-12 margin-top-25 padding-top-15">
  <h2 style="font-weight: 500;">{{{getTourLocName title.es title.en}}}</h2>
  <p><a href="/c/{{slug}}">{{i18n "see_all"}}</a></p>
</div>

<div class="col-md-12">
<div class="listing-slider dots-nav">
  {{#each tours}}
  <!-- Listing Item -->
  <div class="carousel-item col-md-3" style="background-color: #f8f8f8;">
    <a href="/tour/{{slug}}" class="listing-item-container">
      <div class="listing-item">
        {{#if heroImage.secure_url}}
        <img async
          src="https://res.cloudinary.com/triptable/image/upload/c_fit,f_auto,q_auto,h_340/v{{heroImage.version}}/{{heroImage.public_id}}.{{heroImage.format}}"
          alt="{{name}}">
        {{else}}
        <img async
          src="https://res.cloudinary.com/triptable/image/upload/c_fit,f_auto,q_auto,h_340/v{{images.0.version}}/{{images.0.public_id}}.{{images.0.format}}"
          alt="{{name}}">
        {{/if}}

      </div>

      <div class="tour-info">
        <h3 class="title giveMeEllipsis">{{getTourLocName name name_eng}}
          <!-- <i class="verified-icon"></i>-->
        </h3>
        <span class="description one-line"><i class="fa fa-map-marker"></i> {{city.city}} Â· <i
            class="fa fa-clock-o"></i>
          {{duration}}{{#if isMultiDay}} {{i18n "days"}} {{else}} {{i18n "hours"}}
          {{/if}}</span>
        {{#if nOfReviews}}
        <div class="star-rating" data-rating="{{nOfStars}}">
          <div class="rating-counter">({{nOfReviews}} {{i18n "reviews"}})</div>
        </div>
        {{/if}}
        <div class="row margin-top-10">

          <div class="col-md-12 price-box">
            <div class="price">
              {{#unless nOfReviews}}{{#if multiPrice}}<span class="from-price">{{i18n "from"}}</span>{{/if}}{{/unless}}
              <!--<span class="discount-price">$154 USD</span>-->
              <h3>{{getPriceInCurrency price ../../data.currency}} {{../../data.currency}}<span class="per-person">
                  {{i18n "per_person"}}</span>
                <!--<span class="discount-price">$154 USD</span>-->
              </h3>
            </div>
          </div>

        </div>

      </div>
    </a>
  </div>
  {{/each}}
  <!-- Listing Item / End -->
</div>
</div>

{{/each}}
</div>
</div>
</section>

<script>
document.addEventListener("DOMContentLoaded", function() {

setTimeout(function () {
$(".tour-info h3.title").css("line-height", "19px");
$(".one-line").css("line-height", "19px");
}, 500);
});
</script>